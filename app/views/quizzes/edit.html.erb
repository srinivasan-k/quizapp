<h1>Quizs#edit</h1>
<p>Find me in app/views/quizs/edit.html.erb</p>
<%= form_for(@quiz) do   |f|%>

<% if @quiz.errors.any? %>

<div id = "error_explanation" >

<h2> <%= pluralize(@quiz.errors.count,"error")   %> Prohibited this quiz in proceeding further.

<ul>

<%= @quiz.errors.full_messages.each do  |msg| %>

<li> <%= msg %> </li>

<% end %>
</ul>
</div>
<% end %>

<%= f.label :question %> <%= f.text_field :question %>
<%= f.label :answer1 %> <%=  f.text_field :answer1 %>
<%= f.label :answer2 %>  <%= f.text_field :answer2 %>
<%= f.label :answer3 %>  <%= f.text_field :answer3 %>
<%= f.label :answer4 %>  <%= f.text_field :answer4 %>

<%= f.submit %>
<% end %>